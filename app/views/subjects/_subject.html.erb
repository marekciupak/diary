<tr id="subject_<%= subject.id %>">
  <td><%= subject.id %></td>
  <td><%= subject.name %></td>
  <td><%= subject.description %></td>
  <td><%= l(subject.updated_at, format: :long) %></td>
  <td><%= l(subject.created_at, format: :long) %></td>
  <td>
    <%= link_to 'Show', subject_path(subject), :class => 'btn btn-sm btn-info' %>
    <%= link_to 'Change', edit_subject_path(subject), remote: true, :class => 'btn btn-sm btn-info' %>
    <%= link_to 'Delete', subject, remote: true, :method => :delete, data: {confirm: "Remove Subject: #{subject.name}"}, :class => 'btn btn-sm btn-danger' %>
  </td>
</tr>